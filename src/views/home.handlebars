<h1>Productos</h1>

<div>
    {{#each productos}}
        <div class="card">
            <p> {{title}} </p>
            <p> {{description}}  </p>
            <p> {{price}} </p>
            <p>Category: {{category}} </p>
            <button> Agregar al Carrito </button>
        </div>
    {{/each}}
</div>

{{#if hasPrevPage}}
    <a href="/home?page={{prevPage}}">Anterior</a>
{{/if}}

{{#if hasNextPage}}
    <a href="/home?page={{nextPage}}">Siguiente</a>
{{/if}}

