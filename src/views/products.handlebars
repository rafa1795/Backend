<div class="d-flex justify-content-center align-items-center">
    <h1 class="text-center">Productos</h1>
    <a href="/carts/{{cartId}}" class="ms-5">
    <i class="bi bi-cart cart-icon"></i>
    </a>

</div>
<div class="container">
    <div class="row">
        {{#each productos}}
            <div class="card col-xl-4 col-md-6 col-sm-12">
                <img src="{{img}}" alt="" class="card-img-top">
                <div class="card-body">
                    <h2 class="card-title">{{title}}</h2>
                    <p class="card-text">{{description}}</p>
                    <p class="card-text">U$D {{price}}</p>
                    <button class="btnMios add-to-cart" data-product-id="{{_id}}">Agregar al Carrito</button>
                </div>
            </div>
        {{/each}}
    </div>
</div>





<div class="container mt-3">
    <div class="row text-center">
        {{#if hasPrevPage}}
        <a href="/products?page={{prevPage}}"> Anterior </a>
        {{/if}}
        {{#if hasNextPage}}
        <a href="/products?page={{nextPage}}"> Siguiente </a>
        {{/if}}
        <p>Pagina {{currentPage}} de {{totalPages}} </p>
    </div>
</div>